<mvc:View controllerName="shiftchange.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table items="{
                    path: 'employeeModel>/'
                }"
             growing="true" 
             growingThreshold="10" 
             inset="false" 
             mode="None" 
             sticky="ColumnHeaders" 
             class="sapUiResponsiveMargin sapUiResponsiveContentPadding"
             id="table1"
            >


            <headerToolbar>
                 <Toolbar>
                    <Title text="Employee Shift Changes" />
                         <ToolbarSpacer />
                </Toolbar>
             </headerToolbar>
                <columns>

                    <Column >
                        <Label text="Employee"></Label>
                    </Column>

                    <Column>
                        <Label text="Position"></Label>
                    </Column>

                    <Column>
                        <Label text="New Department"></Label>
                    </Column>

                    <Column>
                        <Label text="Start Date"></Label>
                    </Column>

                    <Column>
                        <Label text="Status"> </Label>
                    </Column>

                    <Column>
                        <Label text="New Work Schedule"> </Label>
                    </Column>


                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="OnDetails">
                        <cells>
                            <Text text="{employeeModel>cust_EmployeeId}" id="emp"></Text>
                            <Text text="{employeeModel>cust_CurrentPosition}" id="pos"></Text>
                            <Text text="{employeeModel>cust_NewDepartment}" id="dep"></Text>
                            <Text text="{path: 'employeeModel>cust_StartDate', formatter:'.dateFormatter'}" id="start"></Text>
                            <Text text="{employeeModel>cust_WorkflowStatus}" id="update"> </Text>
                            <Text text="{employeeModel>cust_NewWorkSchedule}" id="workSchedule"> </Text>
                        </cells>
                    </ColumnListItem>
                </items>
            
            </Table>
        
        </content>
    </Page>
</mvc:View>
