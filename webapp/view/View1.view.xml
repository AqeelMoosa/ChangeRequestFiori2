<mvc:View controllerName="shiftchange.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table items="{path:'/cust_EmployeeShiftChange',
            filters:[
            {
                path:'cust_WorkflowStatus',
                operator: 'EQ',
                value1: 'Approval Completed'
            }
            ]
            }"
             growing="true" 
             growingThreshold="10" 
             inset="false" 
             mode="None" 
             sticky="ColumnHeaders" 
             class="sapUiResponsiveMargin sapUiResponsiveContentPadding"
            >
                <columns>

                    <Column >
                        <Label text="Employee Number"></Label>
                    </Column>

                    <Column>
                        <Label text="Position Number"></Label>
                    </Column>

                    <Column>
                        <Label text="Department Number"></Label>
                    </Column>

                    <Column>
                        <Label text="Start Date"></Label>
                    </Column>

                    <Column>
                        <Label text="Status"></Label>
                    </Column>


                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="OnDetails">
                        <cells>
                            <Text text="{cust_EmployeeId}" id="emp"></Text>
                            <Text text="{cust_PositionId}" id="pos"></Text>
                            <Text text="{cust_DepartmentId}" id="dep"></Text>
                            <Text text="{path: 'cust_StartDate', formatter:'.dateFormatter'}" id="start"></Text>
                            <Text text="{cust_WorkflowStatus}" id="update"></Text>
                        </cells>
                    </ColumnListItem>
                </items>
            
            </Table>
        
        </content>
    </Page>
</mvc:View>
